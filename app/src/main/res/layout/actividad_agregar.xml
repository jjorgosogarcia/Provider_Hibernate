
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etLocalidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Localidad"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etDireccion"
        android:layout_below="@+id/etLocalidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Direccion"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignRight="@+id/etLocalidad"
        android:layout_alignEnd="@+id/etLocalidad" />



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etTipo"
        android:layout_below="@+id/etDireccion"
        android:layout_alignLeft="@+id/etDireccion"
        android:layout_alignStart="@+id/etDireccion"
        android:hint="Tipo"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/etPrecio"
        android:layout_below="@+id/etTipo"
        android:layout_alignLeft="@+id/etTipo"
        android:layout_alignStart="@+id/etTipo"
        android:hint="Precio"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/btAgregar"
        android:layout_below="@+id/etPrecio"
        android:layout_alignLeft="@+id/etPrecio"
        android:layout_alignStart="@+id/etPrecio"
        android:onClick="aniadir" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btCancelar"
        android:layout_alignTop="@+id/btAgregar"
        android:layout_toRightOf="@+id/btAgregar"
        android:layout_toEndOf="@+id/btAgregar"
        android:onClick="cancelar" />

</RelativeLayout>
